{
  "manifest_version": 3,
  "name": "Github+Surfly",
  "description": "Instantly join a space to discuss a PR.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  },
  "background": {
    "service_worker": "scripts/main.js"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "permissions": ["activeTab", "tabs", "contextMenus"]
}
